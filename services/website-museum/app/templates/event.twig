{% extends "base.twig" %}

{% block page_title %}{{ object.title }} — {{ site_name }}{% endblock %}

{% block content %}
    {% include "parts/breadcrumbs.twig" %}

    <div class="page-header">
        <h1>{{ object.title }}</h1>
        {% if object.subtitle %}
            <p class="lead">{{ object.subtitle }}</p>
        {% endif %}
        <p>{{ object.date_human }}, начало в {{ object.time_human }}</p>
    </div>

    {{ object.contents_html|raw }}

    {% include "parts/gallery.twig" %}

    <hr/>
    <p><a href="/events">Другие события</a></p>
{% endblock %}
