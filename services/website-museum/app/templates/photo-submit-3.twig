{% extends "base.twig" %}

{% block page_title %}Добавление фотографии — {{ site_name }}{% endblock %}

{% block content %}
    {% include "parts/breadcrumbs.twig" %}

    <div class="page-header">
        <h1>Пополнение коллекции старых фотографий</h1>
        <p class="lead">Шаг 3: описание фотографии.</p>
    </div>

    <form method="post" class="async">
        <input type="hidden" name="step" value="3"/>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Заголовок:</label>
                    <input class="form-control" type="text" name="title" value="{{ photo.title }}"/>
                </div>

                <div class="form-group">
                    <label>Подробное описание:</label>
                    <textarea class="form-control" name="description" rows="5"></textarea>
                </div>
            </div>

            <div class="col-md-6">
                <img src="{{ photo.images.old.s.link }}"/>
            </div>
        </div>

        <div class="form-group actions">
            <button class="btn btn-primary">Продолжить</button>
        </div>
    </form>
{% endblock %}
